{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [
      "./src/archive/*"
    ],
    "attributePosition": "auto",
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
	"linter": {
    "ignore": [
      "./src/archive/*"
    ],
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
