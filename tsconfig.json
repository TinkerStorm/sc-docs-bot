{
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "declaration": true,
    "noErrorTruncation": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "types"],
    "sourceMap": true,
    "paths": {
      "&*": ["./src/modules/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "testing",
  ]
}
